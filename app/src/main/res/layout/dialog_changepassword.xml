<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:scaleType="center"
        android:background="#FFF"
        android:contentDescription="@string/app_name"
        android:text="Şifre Değiştir"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/tf_changepassword_old"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:hint="@string/eski_sifre"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/tf_changepassword_new"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:hint="@string/yeni_sifre"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/tf_changepassword_new_confirm"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:hint="@string/yeni_sifre_onayla"
        android:inputType="textPassword" />

</LinearLayout>
